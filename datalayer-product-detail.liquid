<script>
  window.dataLayer = window.dataLayer || [];

  {% if product %}
  window.dataLayer.push({
    'event': 'view_item',
    'ecommerce': {
      'items': [{
        'item_id': '{{ product.id }}',
        'item_name': '{{ product.title | escape }}',
        'price': '{{ product.price | money_without_currency | replace: ',', '' }}',
        'category': '{{ product.type | escape }}',
        'quantity': 1,
        'value': '{{ product.price | money_without_currency | replace: ',', '' }}'  // Optional: Add this line to track value
      }]
    }
  });
  {% endif %}
</script>
